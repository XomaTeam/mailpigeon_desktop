<tb:TaskbarIcon
        x:Class="Messenger.Elements.ToolBarMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Messenger.Elements"
        mc:Ignorable="d"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        Height="450" Width="800"
        PopupActivation="LeftClick"
        MouseLeftButtonDown="TaskbarIcon_MouseLeftButtonDown">
    <tb:TaskbarIcon.TrayToolTip>
        <TextBlock Margin="0,0,0,0" Text="Почтовый Голубь"></TextBlock>
    </tb:TaskbarIcon.TrayToolTip>
    <tb:TaskbarIcon.ContextMenu>
        <ContextMenu Background="White">
            <MenuItem Click="MenuItem_Click" Header="Закрыть"></MenuItem>
        </ContextMenu>
    </tb:TaskbarIcon.ContextMenu>
</tb:TaskbarIcon>
